{
  "name": "multimodal-accessibility-extension",
  "version": "0.1.0",
  "description": "A comprehensive browser extension that transforms web content in real-time to make it accessible to users with various disabilities",
  "main": "index.js",
  "scripts": {
    "dev": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "lint": "eslint src/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:performance": "jest --testPathPattern=performance",
    "test:compatibility": "jest --testPathPattern=compatibility",
    "reload-extension": "start scripts/reload-extension.html"
  },
  "keywords": [
    "accessibility",
    "browser-extension",
    "text-to-speech",
    "speech-to-text",
    "visual-assistance",
    "cognitive-support",
    "wcag"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.5",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "babel-jest": "^29.5.0",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.43.0",
    "eslint-plugin-react": "^7.32.2",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-axe": "^7.0.1",
    "jest-environment-jsdom": "^29.5.0",
    "jest-junit": "^16.0.0",
    "jest-performance": "^1.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.8.0",
    "compromise": "^14.9.0",
    "dompurify": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tesseract.js": "^4.1.1",
    "chrome-extension-reloader": "^1.0.0"
  }
}
